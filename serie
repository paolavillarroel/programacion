#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int main(){
	int n,x,sig,p,i,s;
	s=0;
    sig=1;
	cout << "Ingrese numero:";
	cin >> x;
	cout << "Ingrese el numero de veces que la serie debe sumar:";
	cin >> n;
	
	for(i=1;i=n;i++){
	   p=powf(x,i);
	   s=s+(sig)*p;
	   sig=sig*(-1);
	cout << "La suma es:"<< s <<endl;
	}
getch();

return 0;
}

