using namespace std;

void menumessi(){
	int op;
	do{

			cout<<"*****  MESSI *****"<<endl;
			cout<<"1. Datos fisicos "<<endl;
			cout<<"2. Numero de goles "<<endl;
			cout<<"3. Equipo "<<endl;
			cout<<"4. Numero de faltas "<<endl;
			cout<<"0. Salir "<<endl;
			cout<<"Elija una opcion ";
		    cin>> op;
			switch(op){
			case 1 :
				cout<<"\n**** DATOS FISICOS ****\n "<<endl;
				cout<<"EDAD:28años\n "<<endl;
				cout<<"FECHA DE NACIMIENTO:24 de junio de 1987 Argentina\n"<<endl;
				cout<<"ALTURA:1.69m\n "<<endl;
				cout<<"PESO:147 libras\n\n "<<endl;
				break;
			case 2: 
				cout<<"\n**** NUMERO DE GOLES **** \n "<<endl;
				cout<<"Estadísticas temporada 2014/2015: 56 goles a favor\n\n "<<endl;
				break;
			case 3:
				cout<<"\n*** EQUIPO ***\n "<<endl;
				cout<<"FC Barcelona\n\n "<<endl;
				break;
			case 4:
				cout<<"\n*** NUMERO DE FALTAS ***\n "<<endl;
				cout<<"Español:  24 asistencias\n "<<endl;
				cout<<"Champions:18 asistencias\n "<<endl;
				cout<<"Copa del Rey: 2 asistencias\n\n "<<endl;
				break;
			}
		}while(op!=0);	
}
