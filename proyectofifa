void main(){
int opcion;
	do{
		system("cls");/// PARA SALTAR DATOS 
		cout<<"    JUGADORES ESPANOLES   "<<endl;
		cout<<"1. Messi"<<endl;
		cout<<"2. Pique"<<endl;
		cout<<"3. Marcelo"<<endl;
		cout<<"4. Cristiano"<<endl;
		cout<<"0. Salir"<<endl;
		cout<<"Elige una opcion: ";
		cin>>opcion;
		switch (opcion){
		case 1:system("cls");
			menumessi();
			break;
		case 2:system("cls");
			menupique();
			break;
		case 3:system("cls");
			menumarcelo();
			break;
        case 4:system("cls");
			menucristiano();
			break;

		}
	}while(opcion!=0);
			
}	
